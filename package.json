{
  "name": "foundry-template",
  "version": "1.0.0",
  "description": "FEVM Foundry template",
  "homepage": "https://github.com/filecoin-project/fevm-foundry-kit",
  "scripts": {
    "prettier": "prettier --write 'src/**/*.sol'",
    "prettier:check": "prettier --check 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "lint": "yarn run prettier && yarn run solhint",
    "lint:check": "yarn run prettier:check && yarn run solhint:check"
  },
  "dependencies": {
    "@fil-b/filfox-verifier": "^1.0.3",
    "filecoin-solidity-api": "^1.1.3",
    "forge-std": "github:foundry-rs/forge-std",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
